<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
    crossorigin="anonymous">
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body{
            background-image: url(Blue.jpg);
        }
        .main{
            height: 85vh;
            width: 90vw;
            margin: 8vh auto;
            background-color: white;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }
        .log_in{
            width: 35vw;
            padding: 2vh 2vw;
            height: 75vh;
            box-shadow: 0 0 20px rgba(0, 0, 255, 0.5);
            backdrop-filter: blur(10px); 
        }
        .log_in form{
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }
        .log_in h3{
            font-size: 1.15rem;
            text-align: center;
            margin: 1vh 0;
        }

        .log_in button{
            width: 100%;
        }

        .log_in p{
            color: rgb(114, 190, 216);
            font-size: 1rem;
        }
       .img{
        height: 100%;
       }

       .img img{
        height: 100%;
       }

       .handles{
        display: flex;
        justify-content: space-around;
       }
       .handles .google,.handles .facebook{
            width: 40%;
            height: 6vh;
           
            display: flex;
            justify-content: center;
            align-items: center;
            /* border: 2px solid black; */
       }
       .handles .google img,.handles .facebook img{
        height: 100%;
       }

       @media (max-width: 1200px) {
            .main {
                flex-direction: column;
                height: auto;
                width: 95vw;
                margin: 4vh auto;
            }
            .log_in {
                width: 80vw;
                margin-bottom: 2vh;
            }
            .img {
                width: 80vw;
                height: 50vh;
            }
            .img img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }

        @media (max-width: 768px) {
            .log_in {
                width: 90vw;
                padding: 2%;
            }
            .img {
                width: 90vw;
                height: 40vh;
            }
            .img img {
                height: 100%;
            }
            .handles .google, .handles .facebook {
                width: 45%;
                height: 5vh;
            }
        }

        @media (max-width: 480px) {
            .main {
                /* height: auto; */
                width: 90vw;
                margin: 2vh auto;
                /* padding: 2vh 0; */
            }
            .log_in {
                width: 90%;
                height: auto;
                margin: 2vh 0;
                padding: 3vh 3vw;
                border-radius: 1rem;
            }
            .img {
                height: 28vh;
                /* height: 30vh; */
            }
            .img img {
                
                height: 100%;
                width: 100%;
                /* object-fit: cover; */
            }
            .handles .google, .handles .facebook {
                width: 40%;
                height: 4vh;
                border: none;
            }
            .handles .google img, .handles .facebook img{
                
                height: 130%;
            }
            .log_in h3 {
                font-size: 1rem;
            }
            .log_in p {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="log_in">
            <form id="resetPasswordForm">
                <h1>Reset Password</h1>
                <div class="mb-3">
                  <label for="otpInput" class="form-label">Phone Number</label>
                  <div style="display: flex;justify-content: space-around; width: 100%;">
                  <input type="text" class="form-control" id="otpInput" name="phn" required style="width: 50%;">
                  <a style="width: 40%;border-radius: 0.6rem;text-decoration: none;" href="/forget">Send OTP</button>
                </div>
                </div>
                <div class="mb-3">
                  <label for="otpInput" class="form-label">OTP</label>
                  <input type="text" class="form-control" id="otpInput" name="otp" required>
                </div>
                <div class="mb-3">
                  <label for="newPassword" class="form-label">New Password</label>
                  <input type="password" class="form-control" id="newPassword" name="password" required>
                </div>
                <div class="mb-3">
                  <label for="confirmPassword" class="form-label">Confirm Password</label>
                  <input type="password" class="form-control" id="confirmPassword" name="cpassword" required>
                </div>
                <button type="submit" class="btn btn-primary">Change Password</button>
            </form>
        </div>
        <div class="img">
            <img src="Bg.jpg" alt="">
        </div>
    </div>
    <script>
        
        document.getElementById('resetPasswordForm').addEventListener('submit', function(event) {
            const otp = '<%= otp %>'; // Embed the OTP dynamically
            event.preventDefault();
            const userInput = document.getElementById("otpInput").value;
            const newPassword = document.getElementById("newPassword").value;
            const confirmPassword = document.getElementById("confirmPassword").value;

            if (otp !== userInput) {
                alert("Incorrect OTP");
                return false;
            }

            if (newPassword !== confirmPassword) {
